<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Set</title>
  <link rel="stylesheet" href="/css/main.css" />

</head>

<body tabindex="-1">

  <%- include('partials/navbar',{page: ''}) %>

  <div class="container mx-auto p-4">


    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Add a new set</h1>
        </div>
      </div>
    </div>

    <br />

    <form class="grid md:grid-cols-2 grid-cols-1 gap-6 max-w-5xl mx-auto border-2 rounded-lg p-8" method="post" action="/lego/addSet">
        <div class="flex flex-col">
          <label for="input-name" class="label font-semibold">
            Name
            </label>
          <input type="text" name="name" required placeholder="Set Name" id="input-name" class="input input-bordered" />
        </div>
        <div class="flex flex-col">
          <label for="input-year" class="label font-semibold">
            Year
            </label>
          <input type="number" name="year" required placeholder="Year of Release" id="input-year" class="input input-bordered" />
        </div>
        <div class="flex flex-col">
          <label for="input-numparts" class="label font-semibold">
            Number of Parts
            </label>
          <input type="number" name="num_parts" required placeholder="Number of parts" id="input-numparts" class="input input-bordered" />
        </div>
        <div class="flex flex-col">
          <label for="input-imgurl" class="label font-semibold">
            Image URL
            </label>
          <input type="url" name="img_url" required placeholder="Link to the set image" id="input-imgurl" class="input input-bordered" />
        </div>
        <div class="flex flex-col">
          <label for="input-theme" class="label font-semibold">
            Theme
          </label>
          <select id="input-theme" class="select select-bordered" name="theme_id">
            <% themes.forEach(theme=>{ %>
            <option value="<%= theme.id %>">
              <%= theme.name %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="flex flex-col">
          <label for="input-setnum" class="label font-semibold">
            Set Number
            </label>
          <input type="text" name="set_num" required placeholder="Set Number" id="input-setnum" class="input input-bordered" />
        </div>
        <input type="submit" value="Add Set" class="btn btn-primary col-span-2"/>
    </form>
</body>

</html>
